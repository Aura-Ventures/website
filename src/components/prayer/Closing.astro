---
import { Icon } from 'astro-icon/components';
import badgeIcon from '~/assets/icons/a.png';
import msgIcon from '~/assets/icons/msg.png';
import heart from '~/assets/icons/heart.png';
import steakIcon from '~/assets/icons/fi.png';

interface Props {
  title?: string;
  content?: string;
  buttonText?: string;
  href?: string;
  bgTheme?: 'image' | 'solid';
  uniqueId?: string;
}

const { bgTheme = 'image' } = Astro.props;
---

<div class="container" data-bg-theme={bgTheme}>
  <div class="header">
    <img class="avatar" id="userAvatar" />
    <span class="from-text">From</span>
    <span class="name" id="userName"></span>
    <Icon name="tabler:chevron-right" class="w-5 h-5 text-gray-400" />
  </div>
  <div class="content">
    <div class="content-scroll">
      <div class="body" id="closingBody"></div>
      <!-- <div class="related-verse">
        <span>Related Verse</span>
      </div> -->
      <!-- Verse Section -->
      <div class="verse-list">
        <!-- <div class="verse-card">
          <div class="verse-image" style="background-color: #E8E0D5; color: #5C4D3C;">G</div>
          <div class="verse-content-big">
            <div class="verse-content">
              <div class="verse-text">
                <span class="verse-number">3</span> God said, “Let there be light!” and there was light. <span
                  class="verse-number">4</span
                > God saw that the light was good, and he separated the light from the darkness.
              </div>
              <div class="verse-ref">Genesis 1:3-4 NASB</div>
            </div>
            <Icon name="tabler:dots" class="verse-menu-icon" />
          </div>
        </div> -->

        <!-- Comments Section -->
        <div class="comments-section">
          <div class="comments-header" id="commentsHeader"></div>
          <div id="commentsList"></div>
        </div>

        <!-- Padding for footer -->
        <div style="height: 100px;"></div>
      </div>
    </div>
    <div class="footer">
      <a class="pray-button" id="closingButton">
        <span>Download Aura Bible</span>
      </a>
    </div>
  </div>

  <style>
    .container {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100dvh;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      overflow: hidden;
    }

    .header {
      display: flex;
      align-self: flex-start;
      align-items: center;
      width: 100%;
      gap: 8px;
      background: #fbfaf3;
      padding: 16px;
    }
    .avatar {
      width: 24px;
      height: 24px;
      background: #e2e2e2;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 12px;
    }

    .name {
      color: #000;
      font-size: 14px;
      font-weight: 500;
    }

    .from-text {
      color: #666;
      font-size: 14px;
    }

    .container[data-bg-theme='image'] {
      background-color: #f2f1ef;
    }

    .container[data-bg-theme='solid'] {
      background-color: #f2f1ef;
      flex: 1;
    }

    .content {
      flex: 1;
      width: 100%;
      overflow: hidden;
      display: flex;
      flex-direction: column;
    }

    .content-scroll {
      flex: 1;
      overflow-y: auto;
    }

    .body {
      padding: 16px;
      color: #2c1f11;
      font-family: 'Lora', serif;
      font-size: 17px;
      font-style: normal;
      white-space: pre-wrap;
      line-height: 140%; /* 25.2px */
      letter-spacing: -0.18px;
    }
    .related-verse {
      margin: 0 16px;
      padding-top: 16px;
      padding-bottom: 12px;
      font-family: 'Lora', serif;
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 140%; /* 22.4px */
      letter-spacing: -0.16px;
      border-bottom: 1px solid var(--Border-Default-border-primary, rgba(0, 0, 0, 0.04));
    }
    .footer {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      padding: 16px;
      display: flex;
      justify-content: center;
      background: linear-gradient(180deg, rgba(239, 239, 239, 0) 0%, #efefef 100%);
      backdrop-filter: blur(12px);
    }
    /* 评论由脚本通过 innerHTML 动态插入，需用 :global 使样式生效 */
    :global(.comment-avatar-container) {
      display: flex;
      align-items: center;
      gap: 8px;
      padding-bottom: 12px;
    }
    :global(.comment-user-container) {
      flex: 1;
    }
    .pray-button {
      flex: 1;
      display: flex;
      align-items: center;
      justify-content: center;
      background: #19130d;
      color: #fff;
      text-align: center;
      font-family: 'Nunito Sans', sans-serif;
      font-size: 16px;
      font-style: normal;
      font-weight: 500;
      line-height: 140%;
      letter-spacing: -0.16px;
      border: none;
      padding: 12px 32px;
      cursor: pointer;
      transition: background 0.3s;
      border-radius: 999px;
      border: 1px solid var(--Border-Reversed-border-primary, rgba(255, 255, 255, 0.04));
      backdrop-filter: blur(4px);
    }

    .pray-button:hover {
      opacity: 0.85;
    }

    /* Verse Section */
    .verse-list {
      padding: 0 16px;
      display: flex;
      flex-direction: column;
      gap: 16px;
      /* margin-bottom: 24px; */
      /* margin-top: 16px; */
    }

    .verse-card {
      display: flex;
      gap: 24px;
      padding: 16px;
      border-radius: 16px;
      background: #fff;
      align-items: flex-start;
    }

    .verse-image {
      width: 54px;
      height: 72px;
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-family: 'Lora', serif;
      font-size: 24px;
      flex-shrink: 0;
      box-shadow: inset 0 0 0 1px rgba(0, 0, 0, 0.05);
    }
    .verse-content-big {
      display: flex;
      gap: 16px;
    }
    .verse-content {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .verse-text {
      color: #2c1f11;
      font-family: 'Lora', serif;
      font-size: 17px;
      font-style: normal;
      font-weight: 400;
      line-height: 140%; /* 23.8px */
      letter-spacing: -0.17px;
    }

    .verse-number {
      font-size: 11px;
      vertical-align: top;
      opacity: 0.6;
      margin-right: 2px;
    }

    .verse-ref {
      color: #999;
      font-family: 'Nunito Sans', sans-serif;
      font-size: 12px;
      font-style: normal;
      font-weight: 600;
      line-height: 130%; /* 15.6px */
    }
    :global(.comment-replies-container) {
      display: flex;
      align-items: center;
      gap: 4px;
      border-radius: 99px;
      border: 1px solid #dcdcdc;
      background: linear-gradient(180deg, #f3f3f3 0%, #ddd 100%);
      box-shadow: 0 0 4px 0 rgba(255, 255, 255, 0.4) inset;
      flex: 0 0 auto;
      padding: 0 4px;
    }
    :global(.comment-replies-count) {
      /* San-Serif/Caption 2/Medium */
      font-family: 'Nunito Sans', sans-serif;
      font-size: 11px;
      font-style: normal;
      font-weight: 600;
      line-height: 130%; /* 14.3px */
    }
    .verse-menu-icon {
      color: #999;
      width: 20px;
      height: 20px;
      cursor: pointer;
      flex-shrink: 0;
    }

    .comments-header {
      color: #2c1f11;
      font-family: 'Lora', serif;
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 140%; /* 25.2px */
      letter-spacing: -0.18px;
      padding: 16px 16px 12px;
      margin: 0 -16px;
      border-bottom: 1px solid var(--Border-Default-border-primary, rgba(0, 0, 0, 0.04));
    }

    :global(.comment-item) {
      border-bottom: 1px solid var(--Border-Default-border-primary, rgba(0, 0, 0, 0.04));
      margin-left: -16px;
      margin-right: -16px;
      padding-left: 16px;
      padding-right: 16px;
      padding-bottom: 16px;
      padding-top: 16px;
    }

    :global(.comment-avatar) {
      width: 44px;
      height: 44px;
      border-radius: 22px;
      object-fit: cover;
      flex-shrink: 0;
      background: #eee;
      border: 1px solid var(--Border-Default-border-primary, rgba(0, 0, 0, 0.04));
    }

    :global(.comment-content) {
      flex: 1;
      display: flex;
      flex-direction: column;
      gap: 4px;
    }

    :global(.comment-user-row) {
      display: flex;
      align-items: center;
      gap: 8px;
      margin-bottom: 4px;
    }

    :global(.comment-name) {
      color: #1a1a1a;
      font-family: 'Nunito Sans', sans-serif;
      font-size: 17px;
      font-style: normal;
      font-weight: 600;
      line-height: 140%; /* 23.8px */
      letter-spacing: -0.17px;
    }

    :global(.comment-time) {
      color: rgba(44, 31, 17, 0.3);
      font-family: 'Nunito Sans', sans-serif;
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 140%; /* 22.4px */
      letter-spacing: -0.16px;
    }

    :global(.comment-badges-row) {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    :global(.badge-pill) {
      padding: 0px 7px;
      display: flex;
      align-items: center;
      color: #2c1f11;
      font-family: 'Nunito Sans', sans-serif;
      font-size: 11px;
      font-style: normal;
      font-weight: 600;
      line-height: 130%;
      border-radius: 99px;
      border: 1px solid #dcdcdc;
      background: linear-gradient(180deg, #f3f3f3 0%, #ddd 100%);
      gap: 2px;
      box-shadow: 0 0 4px 0 rgba(255, 255, 255, 0.4) inset;
    }
    :global(.badge-icon) {
      width: 8px;
      height: 9px;
    }
    :global(.comment-text) {
      color: #333;
      font-family: 'Nunito Sans', sans-serif;
      font-size: 17px;
      font-style: normal;
      font-weight: 400;
      line-height: 140%; /* 22.4px */
      letter-spacing: -0.16px;
    }

    :global(.comment-actions) {
      display: flex;
      gap: 16px;
      margin-top: 12px;
    }

    :global(.action-item) {
      display: flex;
      align-items: center;
      gap: 6px;
      color: #666;
      cursor: pointer;
      font-family: 'Nunito Sans', sans-serif;
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
      line-height: 140%;
      letter-spacing: -0.16px;
    }
  </style>

  <script define:vars={{ heartSrc: heart.src, msgSrc: msgIcon.src, steakSrc: steakIcon.src }}>
    window.__CLOSING_ICONS__ = { heart: heartSrc, msg: msgSrc, steak: steakSrc };
  </script>
  <script>
    document.addEventListener('astro:page-load', () => {});

    document.getElementById('closeIcon')?.addEventListener('click', () => {
      window.location.href = '/';
    });
  </script>
</div>
